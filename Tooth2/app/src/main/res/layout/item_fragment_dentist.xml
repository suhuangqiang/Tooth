<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_margin="20px"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="250px"
            android:layout_height="200px">

            <ImageView
                android:id="@+id/item_fragment_dentist_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/aiy_tu"/>
            <ImageView
                android:id="@+id/item_fragment_dentist_recomment"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@mipmap/lan"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="20px">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/ARL_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_fragment_dentist_hos_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="中泽口腔--万达店"/>
                <TextView
                    android:id="@+id/item_fragment_dentist_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="8px"
                    android:textSize="12sp"
                    android:background="@color/line"
                    android:text="0.6km"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.example.tooth.Utils.StarBar
                android:id="@+id/item_fragment_dentist_starbar"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                ratingbar:starEmpty="@mipmap/xing_h"
                ratingbar:starFill="@mipmap/xing"
                ratingbar:starDistance="5px"
                ratingbar:starCount="5"
                ratingbar:starSize="50px"
                android:layout_below="@+id/ARL_name"/>
            <TextView
                android:id="@+id/item_fragment_dentist_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:text="dizhi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/arrow_next"/>

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
