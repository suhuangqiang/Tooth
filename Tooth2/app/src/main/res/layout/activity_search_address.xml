<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.SearchAddressActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <TextView
                android:id="@+id/activity_search_address_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/title_bar_blue"
                android:text="取消"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_toLeftOf="@+id/activity_search_address_cancel"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:layout_centerVertical="true"
                android:background="@drawable/input_bg"
                >
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/search"
                    android:layout_marginLeft="30px"/>
                <ImageView
                    android:id="@+id/activity_search_address_del"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/cancel"/>
                <EditText
                    android:id="@+id/activity_search_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img"
                    android:layout_toLeftOf="@id/activity_search_address_del"
                    android:background="@null"
                    android:layout_marginRight="30px"
                    android:layout_marginLeft="30px"
                    android:textSize="16sp"
                    android:hint="搜索地点"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/bg_color"/>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/activity_search_address_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>
        <ListView
            android:id="@+id/activity_search_address_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></ListView>
    </com.zhy.autolayout.AutoLinearLayout>
</RelativeLayout>
