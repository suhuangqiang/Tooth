<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_margin="30px">
            <ImageView
                android:id="@+id/item_order_img"
                android:layout_width="180px"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/aiy_tu"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px">
                <TextView
                    android:id="@+id/item_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="标题"
                    />
               <!-- <TextView
                    android:id="@+id/item_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="类型"
                    android:layout_below="@+id/item_order_title"
                    android:layout_marginTop="10px"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/money"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="x 1"
                    android:id="@+id/item_order_num" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_bg"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:layout_centerVertical="true"
                android:text="商品总价："/>
            <TextView
                android:id="@+id/item_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="￥100"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_bg"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:id="@+id/item_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/money"
                android:text="状态"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/item_order_del"
                    android:layout_width="120px"
                    android:layout_height="58px"
                    android:layout_centerVertical="true"
                    android:background="@color/line"
                    android:textColor="@color/white"
                    android:text="取消订单"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:layout_marginRight="30px"/>
                <Button
                    android:id="@+id/item_order_pay_btn"
                    android:layout_width="120px"
                    android:layout_height="58px"
                    android:layout_centerVertical="true"
                    android:background="@color/money"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:focusable="false"
                    android:text="立即付款"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
