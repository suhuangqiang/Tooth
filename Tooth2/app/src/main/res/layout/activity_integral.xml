<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.IntegralActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@color/title_bar_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="当前积分"
                android:layout_marginLeft="30px"
                android:layout_marginTop="50px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/integral"/>
                <TextView
                    android:id="@+id/activity_integral_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="1000"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/activity_integral_raiders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/while_gray_select"
                android:layout_weight="1">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="30px"
                        android:text="积分攻略"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line1"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/activity_integral_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/while_gray_select"
                android:layout_weight="1">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@mipmap/shopping"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="30px"
                        android:text="积分商城"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="积分明细"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/activity_integral_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="暂无积分明细"
                android:layout_marginTop="80px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130px"
                android:text="查看积分攻略，完成每日任务得积分吧"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <ListView
            android:id="@+id/activity_integral_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="gone"></ListView>
    </com.zhy.autolayout.AutoLinearLayout>
</RelativeLayout>
