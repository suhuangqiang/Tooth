<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Fragment.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px">
                <android.support.v4.view.ViewPager
                    android:id="@+id/info_viewpage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v4.view.ViewPager>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/fragment_info_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30px">

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_encyclopedias"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@mipmap/icon_7"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/home_encyclopedias"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_common_sense"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@mipmap/icon_8"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/home_common_sense"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_ask"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:src="@mipmap/icon_9"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            android:layout_width="60px"
                            android:layout_height="60px" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/ask"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>


            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_friends"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:src="@mipmap/icon_10"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            android:layout_width="60px"
                            android:layout_height="60px" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/home_friends"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_question"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="60px"
                            android:src="@mipmap/icon_11"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            android:layout_height="60px" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/question"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info_turntable"
                    android:layout_width="0dp"
                    android:layout_height="180px"
                    android:layout_weight="1"
                    android:background="@drawable/while_gray_select">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:src="@mipmap/icon_12"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10px"
                            android:layout_width="60px"
                            android:layout_height="60px" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/turntable"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>


            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15px"
                android:background="@color/line_bg"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/fragment_info_activity_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="20px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20px"
                    android:text="@string/activities_recommend"/>
                <TextView
                    android:layout_width="5px"
                    android:layout_height="30px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/title_bar_blue"/>
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/next"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

           <com.example.tooth.View.CommentListView
               android:id="@+id/fragment_info_activity_lv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"></com.example.tooth.View.CommentListView>


        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</FrameLayout>
