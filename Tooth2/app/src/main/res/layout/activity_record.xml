<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.RecordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/title_bar"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/clock_detail"
                    android:layout_height="30px" />
                <TextView
                    android:id="@+id/activity_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_marginLeft="30px"
                    android:text="爸爸"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/unit_detail"
                    android:layout_height="30px" />
                <TextView
                    android:id="@+id/activity_record_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img2"
                    android:layout_marginLeft="30px"
                    android:text="爸爸"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/grid_detail"
                    android:layout_height="30px" />
                <TextView
                    android:id="@+id/activity_record_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img3"
                    android:layout_marginLeft="30px"
                    android:text="爸爸"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/unit_detail"
                    android:layout_height="30px" />
                <TextView
                    android:id="@+id/activity_record_docotr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img4"
                    android:layout_marginLeft="30px"
                    android:text="爸爸"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/line_bg"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="治疗详情"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"/>
                <TextView
                    android:id="@+id/activity_record_message1"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:background="@drawable/et_boder"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:padding="10px"
                    android:text="信息"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开药信息"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"/>
                <TextView
                    android:id="@+id/activity_record_message2"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:background="@drawable/et_boder"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:padding="10px"
                    android:text="信息"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医嘱"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"/>
                <TextView
                    android:id="@+id/activity_record_message3"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:background="@drawable/et_boder"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:padding="10px"
                    android:text="信息"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/line_bg" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影像"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"/>
                <GridView
                    android:id="@+id/activity_record_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:verticalSpacing="2dp"
                    android:horizontalSpacing="2dp"></GridView>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:background="@color/white"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</RelativeLayout>
