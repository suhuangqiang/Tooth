<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.WebActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@color/title_bar_blue"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/title_bar_blue">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/arrow"
                android:layout_marginLeft="20px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/activity_web_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="详情"
                android:layout_centerInParent="true"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px">
                <ImageView
                    android:id="@+id/activity_web_collection_img"
                    android:src="@mipmap/star1"
                    android:layout_width="30px"
                    android:layout_height="30px" />
                <ImageView
                    android:id="@+id/activity_web_share_img"
                    android:src="@mipmap/return_"
                    android:layout_marginLeft="30px"
                    android:layout_width="30px"
                    android:layout_height="30px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/activity_web_progressbar"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:indeterminateOnly="false"
            android:max="100"
            />
        <WebView
            android:id="@+id/activity_web_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>
    </com.zhy.autolayout.AutoLinearLayout>

</RelativeLayout>
