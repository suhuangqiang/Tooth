<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.SuggestActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/title_bar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:text="请留下你的宝贵建议："/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">
                <EditText
                    android:id="@+id/activity_suggest_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_yuan"
                    android:padding="10px"
                    android:gravity="top|left"
                    android:hint="点击输入内容"/>
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/mo"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <Button
            android:id="@+id/activity_suggest_btn"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/listitem_gray"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:text="提交"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</RelativeLayout>
