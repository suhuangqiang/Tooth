<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">
            <ImageView
                android:id="@+id/item_ask_list_headimg"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_marginLeft="30px"
                android:src="@mipmap/user_zxyw"/>
            <TextView
                android:id="@+id/item_ask_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/title_bar_blue"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:text="爱牙牙"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="180px"
            android:layout_marginRight="30px">
            <TextView
                android:id="@+id/item_ask_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.5"
                android:text="内容内容内容内容内容内容内容内容内容内容内容"/>
            <ImageView
                android:id="@+id/item_ask_list_img"
                android:layout_width="400px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                android:layout_marginTop="30px"
                android:src="@mipmap/tu_zx"/>
            <GridView
                android:id="@+id/item_ask_list_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:horizontalSpacing="20px"
                android:verticalSpacing="20px"
                android:visibility="gone"></GridView>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px">
                <TextView
                    android:id="@+id/item_ask_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:text="2016-10-31  17:56"/>

                <TextView
                    android:id="@+id/item_ask_list_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:text="20"/>
                <ImageView
                    android:id="@+id/item_friends_commentimg"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/item_ask_list_commentcount"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/info_zx"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.example.tooth.View.CommentListView
                android:id="@+id/item_ask_list_commentlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.tooth.View.CommentListView>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/bg_color"/>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
