<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.QuestionActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/activity_question_item"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ask"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问卷说明"
                android:textColor="@color/black"
                android:layout_marginLeft="110px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="50px"
                android:layout_height="30px" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_next"
                android:layout_marginRight="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <ListView
            android:id="@+id/activity_question_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"></ListView>
    </com.zhy.autolayout.AutoLinearLayout>
</RelativeLayout>
