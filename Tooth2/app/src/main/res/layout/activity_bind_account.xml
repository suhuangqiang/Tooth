<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tooth.Activity.BindAccountActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="50px"
            android:layout_marginLeft="30px"
            android:text="@string/change_phone"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:text="当前手机号："/>
            <TextView
                android:id="@+id/activity_bind_account_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/money"
                android:text="13633233"/>
        </com.zhy.autolayout.AutoLinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px" />
        
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">
            <ImageView
                android:id="@+id/account_bind_phone"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/phone_1"/>
            <Button
                android:id="@+id/account_bind_getcode"
                android:layout_width="180px"
                android:layout_height="68px"
                android:text="@string/get_code"
                android:textSize="12sp"
                android:textColor="@color/line"
                android:background="@color/getcode"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                />
            <EditText
                android:id="@+id/account_bind_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/account_bind_phone"
                android:layout_toLeftOf="@+id/account_bind_getcode"
                android:background="@null"
                android:hint="@string/input_phone_number"
                android:textColor="@color/line"
                android:textColorHint="@color/line"
                android:textCursorDrawable="@null"
                android:paddingLeft="20px"
                android:textSize="20sp"
                android:inputType="phone"
                android:maxLength="11"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">
            <ImageView
                android:id="@+id/account_bind_codeImg"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ok_1"/>
            <EditText
                android:id="@+id/account_bind_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/account_bind_codeImg"
                android:layout_marginRight="30px"
                android:background="@null"
                android:hint="@string/input_code"
                android:textColor="@color/line"
                android:textColorHint="@color/line"
                android:textCursorDrawable="@null"
                android:paddingLeft="20px"
                android:textSize="20sp"
                android:inputType="phone"
                android:maxLength="11"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/activity_bind_account_btn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/title_bar_blue"
        android:text="验证后绑定新手机"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"/>

</RelativeLayout>
