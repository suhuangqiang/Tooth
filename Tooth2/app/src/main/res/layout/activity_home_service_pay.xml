<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".Activity.HomeServicePayActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/activity_home_service_pay_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="50px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <ImageView
                android:id="@+id/pic1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/fee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="预约费："
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pic1"
                android:layout_marginLeft="30px"/>
            <TextView
                android:id="@+id/activity_home_service_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:textColor="@color/money"
                android:text="￥100元"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30px"
                android:text="选择支付方式"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/activity_home_service_pay_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <ImageView
                android:id="@+id/pic2"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/zhifubao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="支付宝客户端"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pic2"
                android:layout_marginLeft="30px"/>
            <ImageView
                android:id="@+id/activity_home_service_pay_img1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/xuanz"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line1"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/activity_home_service_pay_weixin"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/white">
            <ImageView
                android:id="@+id/pic3"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/weixin_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="微信支付"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pic3"
                android:layout_marginLeft="30px"/>
            <ImageView
                android:id="@+id/activity_home_service_pay_img2"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/xuanz_2"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/activity_home_service_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center"
        android:text="@string/sure"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@color/title_bar_blue"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
