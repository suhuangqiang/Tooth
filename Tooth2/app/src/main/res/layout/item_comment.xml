<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/item_comment_head"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@mipmap/user_pl"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_commnent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/title_bar_blue"
                        android:text="桔子一号"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/item_comment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/money"
                        android:layout_centerVertical="true"
                        android:text="删除"
                        android:layout_alignParentRight="true"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:id="@+id/item_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:textColor="@color/line"
                    android:text="2016-11-1  14:57"/>
                <TextView
                    android:id="@+id/item_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="沙发"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="30px"
            android:background="@color/bg_color"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
